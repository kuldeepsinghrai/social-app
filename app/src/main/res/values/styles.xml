<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="StandardButton" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>


    <style name="StandardButtonBaseStyle" parent="android:Widget.Button">
        <item name="android:minHeight">@dimen/appStandardButtonMinHeight</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>


    <style name="PrimaryStandardButtonStyle" parent="StandardButtonBaseStyle">
        <item name="android:background">@drawable/theme_button_selector</item>
        <item name="android:textColor">@color/primary_text_selector</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
    </style>

    <style name="PrimaryStandardButtonStyle.Small" parent="StandardButtonBaseStyle">
        <item name="android:background">@drawable/theme_button_selector</item>
        <item name="android:textColor">@color/primary_text_selector</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
        <item name="android:minHeight">@dimen/dimen_30</item>
    </style>

    <style name="DialogThemeWidth90" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="windowFixedWidthMajor">90%</item>
        <item name="windowFixedWidthMinor">90%</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>