<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/button_disabled" android:state_enabled="false"></item>
    <item android:drawable="@drawable/button_pressed" android:state_pressed="true">
        <objectAnimator android:duration="200" android:propertyName="translationZ" android:valueTo="6dp" android:valueType="floatType" />
    </item>
    <item android:drawable="@drawable/button_normal">
        <objectAnimator android:duration="200" android:propertyName="translationZ" android:valueTo="0dp" android:valueType="floatType" />
    </item>
</selector>
