<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="@dimen/dimen_46"
                android:layout_height="@dimen/dimen_46"
                android:layout_gravity="center"
                android:src="@drawable/profile_pic"
                app:civ_border_color="@color/black"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_18"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4"
                    android:text="about">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_more">

        </ImageView>

    </LinearLayout>


    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_14"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_pic"
        app:riv_corner_radius="@dimen/dimen_14"
        app:riv_mutate_background="true" />

    <RelativeLayout
        android:layout_marginStart="@dimen/dimen_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_favorite"
            android:drawablePadding="@dimen/dimen_10"
            android:textSize="@dimen/dimen_12"
            android:text="54">

        </TextView>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/like"
            android:layout_marginStart="@dimen/dimen_16"
            android:drawableLeft="@drawable/ic_comment"
            android:drawablePadding="@dimen/dimen_10"
            android:textSize="@dimen/dimen_12"
            android:text="12">

        </TextView>

        <TextView
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/comment"
            android:layout_marginStart="@dimen/dimen_16"
            android:drawableLeft="@drawable/ic_share"
            android:drawablePadding="@dimen/dimen_10"
            android:textSize="@dimen/dimen_12"
            android:text="2">

        </TextView>

    </RelativeLayout>


</LinearLayout>