<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_4"
        android:layout_marginTop="@dimen/dimen_8"
        android:layout_marginEnd="@dimen/dimen_8"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <com.makeramen.roundedimageview.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profileImage"
                android:layout_width="@dimen/dimen_46"
                android:layout_height="@dimen/dimen_46"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:layout_gravity="center"
                app:riv_border_color="@color/appBlueLight"
                app:riv_border_width="2dip"
                app:riv_corner_radius="30dip"
                app:riv_mutate_background="true"
                app:riv_oval="true">

            </com.makeramen.roundedimageview.RoundedImageView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dimen_8"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name "
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_4"
                    android:text="about">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_more">

        </ImageView>

    </LinearLayout>



    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/postImage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_460"
        android:layout_marginBottom="@dimen/dimen_8"
        android:src="@drawable/placeholder"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/dimen_2"
        app:riv_mutate_background="true" />

    <LinearLayout
        android:layout_marginStart="@dimen/dimen_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_4"
            android:drawableLeft="@drawable/ic_favorite"
            android:textSize="@dimen/text_size_14"
            android:text="">

        </TextView>

        <TextView
            android:id="@+id/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/like"
            android:layout_marginStart="@dimen/dimen_16"
            android:gravity="center_vertical"
            android:drawablePadding="@dimen/dimen_4"
            android:drawableLeft="@drawable/ic_comment"
            android:textSize="@dimen/text_size_14"
            android:text="">

        </TextView>

    </LinearLayout>

    <TextView
        android:id="@+id/postDescription"
        android:layout_marginHorizontal="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_10"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:textColor="@color/black"
        android:layout_height="wrap_content">

    </TextView>

    <View
        android:layout_marginHorizontal="@dimen/dimen_6"
        android:layout_marginTop="@dimen/dimen_14"
        android:layout_marginBottom="@dimen/dimen_6"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1"
        android:background="@color/appLightGray">

    </View>


</LinearLayout>